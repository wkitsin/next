<div class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Raw</h1>
                    <h3>Affordable Lawyer Solutions</h3>
                    <hr class="intro-divider">
                    <div class="card" style="color: black; background-color: white;">
                    	<div class="chat-card card">
                    		<h3>Hi! Welcome to Raw.</h3>
                    		<h3>Please identify yourself</h3>
                    		<ul class="list-inline intro-social-buttons">
								<li>
							        <div class="identify-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Individual</span></div>
							    </li>
								<li>
							        <div class="identify-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Startup</span></div>
							    </li>
								<li>
							        <div class="identify-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Company</span></div>
							    </li>
							</ul>
                    	</div>
                    	<div class='pads' style="height: 5px;"></div>

                    	<div id="second-card" class="chat-card card" style="display: none; width: 50%">
                    		<h3>Great!, what legal help do you need?</h3>
                    		<br>
                    	</div>
                    	

						<div class='pads' style="height: 5px;"></div>

                    	<div id="third-card" class="chat-card card" style="display: none; width: 40%; float: right;">
                    		<h3>Legal documents</h3>
                    	</div>

                    	

                    	<div id="fourth-card" class="chat-card card" style="display: none; width: 100%">
                    		<h3>Sure, what stage is your startup in?</h3>
                    		<ul class="list-inline intro-social-buttons">
								<li>
							        <div class="development-btn stage-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Development</span></div>
							    </li>
								<li>
							        <div class="growth-btn stage-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Growth</span></div>
							    </li>
								<li>
							        <div class="stage-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Production</span></div>
							    </li>
							    <li>
							        <div class="stage-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">I don't know</span></div>
							    </li>
							</ul>
                    	</div>
            

                    	<div class='pads' style="height: 10px;"></div>

                    	<div class="card">
	                    	<div id='last-card-first' class='funkyradio' style='display: none; font-size: 18px;'>
	                    	<br>
	                    	<h2>These are the possible areas of law that you need to consider. Click on those that are relevant to you</h2>
					            <div class='partnership agreement'>
					            	<div class="funkyradio-success">
					            	    <input type="checkbox" name="checkbox2" id="checkbox2" />
					            	    <label for="checkbox2">Compliance with securities laws in the issuance of shares</label>
					            	</div>
					            </div>
								
					            <div class='partnership agreement'>
					            	<div class="funkyradio-success">
					            	    <input type="checkbox" name="checkbox" id="checkbox3"  />
					            	    <label for="checkbox3">Incorporation advice</label>
					            	</div>	
					            </div>

					            <div class='partnership agreement'>
					            	<div class="funkyradio-success">
					            	    <input type="checkbox" name="checkbox" id="checkbox4"  />
					            	    <label for="checkbox4">Intellectual property protection</label>
					            	</div>	
					            </div>

					            <div class='partnership agreement'>
					            	<div class="funkyradio-success">
					            	    <input type="checkbox" name="checkbox" id="checkbox5"  />
					            	    <label for="checkbox5">Potential Shareholder Disagreements</label>
					            	</div>	
					            </div>
	            				<%= link_to page3_path do %>
									<p><button type="button" class="btn btn-lg btn-primary">Submit</button></p>
								<% end %>
					        </div>	
					        <div id='last-card-second' class='funkyradio' style='display: none; font-size: 18px;'>
	                    	<br>
	                    	<h2>These are the possible areas of law that you need to consider. Click on those that are relevant to you</h2>
					            <div class='partnership agreement'>
					            	<div class="funkyradio-success">
					            	    <input type="checkbox" name="checkbox2" id="checkbox2" />
					            	    <label for="checkbox2">Shareholder Agreement</label>
					            	</div>
					            </div>
								
					            <div class='partnership agreement'>
					            	<div class="funkyradio-success">
					            	    <input type="checkbox" name="checkbox" id="checkbox3"  />
					            	    <label for="checkbox3">Formation Advice</label>
					            	</div>	
					            </div>
	            				<%= link_to page3_path do %>
									<p><button type="button" class="btn btn-lg btn-primary">Submit</button></p>
								<% end %>
					        </div>
					    </div>
				        <%= text_field_tag :text_field %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
	$('.identify-btn').click(function(){
		$('.identify-btn').removeClass('btn-primary');
		$(this).addClass('btn-primary');
		$('#second-card').show();
	})

	$('#text_field').keypress(function(e) {
	    if(e.which == 13) {
	    	$('#text_field').val('');
	        $('#third-card').show();
	        // $('#pads_special').show();
	        $('#fourth-card').show();
	    }
	});

	$('.stage-btn').click(function(){
		$('.stage-btn').removeClass('btn-primary');
		$(this).addClass('btn-primary');
	})

	$('.development-btn').click(function(){
		$('#last-card-first').hide();
		$('#last-card-second').show();
	})

	$('.growth-btn').click(function(){
		$('#last-card-second').hide();
		$('#last-card-first').show();
	})

</script>