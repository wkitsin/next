<div class="col-sm-3">
    <div class="card">
        <canvas class="header-bg" width="250" height="70" id="header-blur"></canvas>
        <div class="avatar">
          <%= image_tag("waikit.png") %>
        </div>
        <div class="content">
            <p>
              Wai Kit <br>
              Wai Kit Sdn Bhd. <br>
              13/hour <br>
            </p>
            <p><%= button_to "Contact", page4_path,
:class => "btn btn-defalit", :method => :get %></p>
        </div>
    </div>
</div>
<div class='block'>
	<div class="calendar-container">
		<div class='calender'>
			<input id="date-picker" class="flatpickr flatpickr-input active date-picker form" name="chart[date]" type="text" placeholder="<%= Date.today %>" data-id="datetime" readonly="readonly">
			<br><br>
			<div class="time-picker" style="display: none;">
			    <ul class="list-inline intro-social-buttons">
					<li>
				        <div class="time-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">2.00pm - 3.00pm</span></div>
				    </li>
					<li>
				        <div class="time-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">3.00pm - 4.00pm</span></div>
				    </li>
					<li>
				        <div class="time-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">4.00pm - 5.00pm</span></div>
				    </li>
				    <li>
				        <div class="time-btn btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">5.00pm - 6.00pm</span></div>
				    </li>
				</ul>
			</div>

			<%= button_to "Book", "/#", id: "book-button", class: "btn btn-primary btn-lg", remote: true, style: "display: none" %>
		</div>
	</div>
</div>
<script>
	flatpickr('#date-picker',{
		minDate: "today",
		"enable": [
        function(date) {
            return (date.getDay() === 5 || date.getDay() === 6);
	        }
	    ]
	});

	$('.time-btn').click(function(){
		$('.time-btn').removeClass('btn-primary');
		$(this).addClass('btn-primary');
		$('#book-button').show();
	})

	$('#date-picker').change(function(){
		$('.time-picker').show();
	});
</script>